form.regform(action='#', method='post', name='form-registration')

  h5.regform__header Open an account

  .regform__names-wrapper
    input#input-firstName.regform__input(type='text', name='input-firstName', autocomplete='off', pattern='^[A-Za-zА-Яа-яЁёs]+$', maxlength='30' placeholder='name')

    input#input-lastName.regform__input(type='text', name='input-lastName', autocomplete='off', pattern='^[A-Za-zА-Яа-яЁёs]+$', maxlength='20' placeholder='surname')

  input#input-email.regform__input(type='text', name='input-email', autocomplete='off' placeholder='e-mail')

  .regform__phone-wrapper
    .regform__flag-wrapper
      .regform__flag-wrapper-cover-for-click
      .regform__img-flag-wrapper
        img.regform__flag-img(src="assets/img/european_union.png", alt="country-flag")
      i.fas.fa-caret-down
    .regform__countries-wrapper

    input#input-country-code.regform__input.regform__input_ccode(type='text', name='input-phone' value='+000' readonly)
    input#input-phone.regform__input.regform__input_phone(type='text', name='input-phone' readonly)

  .regform__passwords-wrapper
    .regform__input-wrapper
      input#input-password.regform__input.regform__input.regform__input_pass(type='password', name='input-password' placeholder=' password')
      span.regform__show-hide-pass
        //- i.fas.fa-eye
        i.fas.fa-eye-slash

    .regform__input-wrapper
      input#input-confirm-pass.regform__input.regform__input_pass(type='password', name='input-confirm-pass' placeholder='confirmation')
      span.regform__show-hide-pass
        //- i.fas.fa-eye
        i.fas.fa-eye-slash

  .regform__agree-wrapper
    label.regform__agree-label(style='cursor:pointer')
      span.regform__agree-checkbox-span
        input(type='checkbox', name='input-checkbox', required='')
        span.regform__check-mark: i.fas.fa-check
      span.regform__agree-text I'm over 18 years old. I have read and accept
      |
      |
    a.regform__link(href='terms_and_conditions_en.html') Customer agreement,
    |
    |
    a.regform__link(href='privacy_policy_en.html') Privacy Policy,
    |
    |
    a.regform__link(href='notification_of_risks_en.html') Risk Notification.

  button.regform__btn#btnsubmit(type='button') OPEN AN ACCOUNT

